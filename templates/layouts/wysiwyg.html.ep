                </div>
            </div>
            <div class="col-3">
                % if (session('admin')) {
                %= link_to 'Logout' => 'logout', (style => 'display:inline-block;width:67px;height:45px;z-index:2;', id => 'headerButton1')
                % }
                % else {
                %= link_to 'Login' => 'login', (style => 'display:inline-block;width:67px;height:45px;z-index:2;', id => 'headerButton1')
                % }
                <a id="headerButton2" href="" style="display:inline-block;width:169px;height:45px;z-index:3;">Call us +001 222 555</a>
            </div>
        </div>
    </div>
    <div id="wb_homeLayoutGrid" class="wb-theme-content">
